<div class="container">
  <div class="card" style="width: 18rem;">
    <%= cl_image_tag @cocktail.photo, height: 150, width: 100, crop: :fill, class:"card-img-top" %>
    <div class="card-body">
      <h4 class="card-title-cocktail"><%= @cocktail.name %> </h4>
      <p class="card-text"></p>
    </div>
      <div class="card-body">

        <div class="card-grid-3">
              <div class="card-cocktail-header">
                <h5>Ingredient</h5>
              </div>
              <div class="grid-right card-cocktail-header">
                <h5>Amount</h5>
              </div>
              <div class="grid-right">
                <%= link_to new_cocktail_dose_path(@cocktail),  class:"card-link" do%>
                <i class="fas fa-plus-circle"></i>
                <% end %>
              </div>
            </div>

      </div>
      <div>
        <ul class="list-group list-group-flush">
          <% @cocktail.doses.each do |dose| %>
            <li class="list-group-item">
              <div class="card-grid-3">
                <div>
                  <%= dose.ingredient.name%>
                </div>
                <div class="grid-right">
                  <%= dose.description%>
                </div>
                <div class="grid-right">
                  <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?'},  class:"card-link" do%>
                  <i class="fas fa-trash-alt"></i>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
  </div>
</div>
